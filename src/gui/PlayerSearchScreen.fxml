<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="529.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.PlayerSearchScreenController">
    <children>
        <VBox alignment="CENTER" prefHeight="50.0" prefWidth="650.0">
         <children>
            <Label fx:id="titleLabel" text="Search Player - ">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
        </VBox>
        <HBox layoutY="50.0" prefHeight="50.0" prefWidth="650.0" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#searchByPlayerNameButton" prefHeight="50.0" prefWidth="127.0" text="By Player Name" />
                <Button mnemonicParsing="false" onAction="#searchByClubCountryButton" prefHeight="50.0" prefWidth="117.0" text="By Club-Country" />
                <Button mnemonicParsing="false" onAction="#searchByPositionButton" prefHeight="50.0" prefWidth="103.0" text="By Position" />
                <Button mnemonicParsing="false" onAction="#searchBySalaryRangeButton" prefHeight="50.0" prefWidth="118.0" text="By Salary Range" />
                <Button mnemonicParsing="false" onAction="#countryWiseCountButton" prefHeight="50.0" prefWidth="150.0" text="Country-wise count" />
            </children>
        </HBox>
        <VBox fx:id="playerSearchContent" layoutY="100.0" prefHeight="300.0" prefWidth="650.0" />
    </children>
</AnchorPane>
